@model WebApplication1.Models.Admin

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/styleiletisim.css">
<link rel="stylesheet" href="/css/stylehizmetlerimiz.css">
<link rel="stylesheet" href="/css/bootstrap.css">

<head>
    <link rel="stylesheet" href="/css/style.css">
</head>


<div class="iletisim" style="padding-top:50px; padding-bottom:100px">
    <div class="container-fluid" id="container">
        <div class="row">
            <div class="col-sm-12 col-md-2">

            </div>

            <div class="col-sm-12 col-md-8" style="margin: auto; padding-top: 50px; padding-bottom: 150px;">
                <div class="login-sign">
                    <div style="margin: auto">
                        <form action="#" method="post">
                            <div style="align-content:center;"><h1 style="font-family:Muli, sans-serif; text-align:center; font-size: 40px;"><b>Kayıt Ol</b></h1></div>

                            <div style="align-content:center; padding-left:300px;"><p style="font-family: Muli, sans-serif; font-size: 18px; margin-top: 50px;">Ad</p></div>
                            <div style="align-content:center; padding-left:300px;"><input style="width:60%; height:40px;" class="form-control mr-sm-2" type="text"></div>

                            <div style="align-content:center; padding-left:300px;"><p style="font-family: Muli, sans-serif; font-size: 18px; margin-top: 20px;">Soyad</p></div>
                            <div style="align-content:center; padding-left:300px;"><input style="width:60%; height:40px;" class="form-control mr-sm-2" type="text"></div>

                            <div style="align-content:center; padding-left:300px;">
                                <p style="font-family: Muli, sans-serif; font-size: 18px; margin-top: 50px;">
                                    Kullanıcı Adı: <br />@Html.TextBoxFor(x => x.Kullanici, new { @class = "form-control", @style = "width: 60%" })
                                </p>
                            </div>

                            <div style="align-content:center; padding-left:300px;">
                                <p style="font-family: Muli, sans-serif; font-size: 18px; margin-top: 50px;">
                                    Şifre: <br />@Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", @style = "width: 60%" }) <br />
                                </p>
                            </div>

                            <div style="height:25px;top:10px; padding-left:300px;" class="login-item">
                                <input style="width:14px;height:14px;float:left;margin-top:7px;" class="form-control mr-sm-2" type="checkbox">
                                <p id="login-kay1">Şifreyi göster</p>
                            </div>

                            <div style="float:left; padding-top: 50px; padding-left:300px;" class="login-item">
                                <a href="/Order/Register/">
                                    <button style="background-color:#FB5369;border:1px solid #FB5369; width:200px;height:45px;color:white;font-size:20px;" type="submit" class="btn btn-success">Kayıt Ol</button>
                                    </a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

            <div class="col-sm-12 col-md-2">

            </div>
        </div>
    </div>
</div>